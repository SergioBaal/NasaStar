<resources>
    <!-- Base application theme. -->
    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="superColorFirst">@color/red</item>
        <item name="superColorSecond">@color/white</item>
        <item name="android:navigationBarColor">?superColorFirst</item>
        <item name="colorPrimary">?superColorFirst</item>
        <item name="colorOnPrimary">?superColorSecond</item>
        <item name="colorPrimaryContainer">?superColorFirst</item>
        <item name="colorOnPrimaryContainer">?superColorFirst</item>
        <item name="colorPrimaryInverse">?superColorFirst</item>
        <item name="colorSecondary">?superColorFirst</item>
        <item name="colorOnSecondary">?superColorSecond</item>
        <item name="colorSecondaryContainer">?superColorFirst</item>
        <item name="colorOnSecondaryContainer">?superColorFirst</item>
        <item name="colorTertiary">?superColorFirst</item>
        <item name="colorOnTertiary">?superColorSecond</item>
        <item name="colorTertiaryContainer">?superColorFirst</item>
        <item name="colorOnTertiaryContainer">?superColorFirst</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/MyStyle</item>
        <item name="floatingActionButtonStyle">@style/MyStyleFloatingActionButton</item>
        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="tabStyle">@style/MyTabStyle</item>
        <item name="textAppearanceBody2">@style/MyTextAppearance</item>
        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>
    </style>


    <style name="MyRedTheme" parent="MyBaseTheme">
        <item name="superColorFirst">@color/red</item>
        <item name="superColorSecond">@color/green</item>
    </style>

    <style name="MyGreenTheme" parent="MyBaseTheme">
        <item name="superColorFirst">@color/green</item>
        <item name="superColorSecond">@color/purple_200</item>
    </style>

    <style name="MyBlueTheme" parent="MyBaseTheme">
        <item name="superColorFirst">@color/blue</item>
        <item name="superColorSecond">@color/orange</item>
    </style>


</resources>